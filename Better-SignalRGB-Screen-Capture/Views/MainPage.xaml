<Page
    x:Class="Better_SignalRGB_Screen_Capture.Views.MainPage"
    x:Name="MainPageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Better_SignalRGB_Screen_Capture.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Better_SignalRGB_Screen_Capture.Models"
    xmlns:converters="using:Better_SignalRGB_Screen_Capture.Converters"
    mc:Ignorable="d"
    KeyDown="MainPage_KeyDown">

    <Page.Resources>
        <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>
    
    <Grid x:Name="ContentArea" ColumnSpacing="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>

        <!--  Left Panel - Source List  -->
        <Border Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,16"
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Text="Sources" />

                <!--  Control Buttons  -->
                <StackPanel Grid.Row="1" Margin="0,0,0,16" Spacing="8">
                <Button
                    HorizontalAlignment="Stretch"
                    Click="Add_Sources"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" />
                        <TextBlock>Add Source</TextBlock>
                    </StackPanel>
                </Button>
                    
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Button 
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.StartAllCapturesCommand}"
                            Content="Start All" />
                            
                        <Button 
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.StopAllCapturesCommand}"
                            Content="Stop All" />
                    </Grid>
                </StackPanel>

                <!--  Sources List  -->
                <ScrollViewer Grid.Row="2">
                    <ListView
                        x:Name="SourcesListView"
                        ItemsSource="{x:Bind ViewModel.Sources}"
                        CanReorderItems="True"
                        AllowDrop="True"
                        SelectionMode="Extended"
                        SelectionChanged="SourceSelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:SourceItem">
                                <Border
                                    Margin="0,0,0,8"
                                    Padding="12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Source Name/Type  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind DisplayName}"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--  Type Badge  -->
                                        <Border
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Padding="6,2"
                                            Background="{ThemeResource AccentFillColorSecondaryBrush}"
                                            CornerRadius="8">
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="{ThemeResource TextFillColorInverse}"
                                                Text="{x:Bind Type}" />
                                        </Border>

                                        <!--  Details  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            TextTrimming="CharacterEllipsis">
                                            <Run Text="Position:" />
                                            <Run Text="{x:Bind CanvasX, Mode=OneWay}" />
                                            <Run Text="," />
                                            <Run Text="{x:Bind CanvasY, Mode=OneWay}" />
                                            <Run Text=" Size:" />
                                            <Run Text="{x:Bind CanvasWidth, Mode=OneWay}" />
                                            <Run Text="x" />
                                            <Run Text="{x:Bind CanvasHeight, Mode=OneWay}" />
                                        </TextBlock>

                                        <!--  Action Buttons  -->
                                        <StackPanel
                                            Grid.Row="2"
                                            Grid.ColumnSpan="2"
                                            Margin="0,8,0,0"
                                            Orientation="Horizontal"
                                            Spacing="8">
                                            <Button
                                                Padding="8,4"
                                                Click="DeleteSource_Click"
                                                Content="Delete"
                                                FontSize="12"
                                                Tag="{x:Bind}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Border>

        <!--  Middle Panel - Canvas  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Canvas Header  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,16"
                Orientation="Horizontal"
                Spacing="16">
                <TextBlock x:Name="CanvasModeTitle" Style="{ThemeResource TitleTextBlockStyle}" Text="Layout Preview" />
                <Button Content="Reset Canvas" Command="{x:Bind ViewModel.ResetCanvasCommand}" />
                <Button Content="Zoom to Fit" Click="ZoomToFit_Click" />
                <Button Content="Zoom 100%" Click="Zoom100_Click" />
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock FontSize="12" FontWeight="SemiBold" Text="MJPEG Stream:" />
                    <TextBlock 
                        FontSize="11" 
                        FontFamily="Consolas"
                        Foreground="{ThemeResource SystemAccentColor}"
                        Text="{x:Bind ViewModel.StreamingUrl, Mode=OneWay, FallbackValue='Starting...'}" />
                </StackPanel>
            </StackPanel>

            <!--  Canvas Container  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <Border
                    Grid.Row="0"
                    Background="{ThemeResource LayerFillColorAltBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <ScrollViewer x:Name="CanvasScrollViewer"
                                  ZoomMode="Enabled" MinZoomFactor="0.1" MaxZoomFactor="4"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollMode="Enabled" VerticalScrollMode="Enabled"
                                  IsZoomInertiaEnabled="True" IsScrollInertiaEnabled="True">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Layout Canvas -->
                        <Canvas
                            x:Name="SourceCanvas"
                            Width="800"
                            Height="600"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            PointerPressed="SourceCanvas_PointerPressed"
                            PointerMoved="SourceCanvas_PointerMoved"
                            RightTapped="SourceCanvas_RightTapped">
                            <!--  Sources will be added here programmatically  -->
                            
                            <!--  Zone selection rectangle - moved to the end so it appears on top  -->
                            <Rectangle x:Name="SelectionRectangle" 
                                       Visibility="Collapsed" 
                                       Stroke="{ThemeResource SystemAccentColor}" 
                                       StrokeThickness="2" 
                                       Fill="{ThemeResource SystemAccentColor}" 
                                       Opacity="0.2"
                                       StrokeDashArray="4,2"
                                       Canvas.ZIndex="1000" />
                        </Canvas>
                            
                            <!-- Live Preview Canvas -->
                            <Canvas
                                x:Name="PreviewCanvas"
                                Width="800"
                                Height="600"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Visibility="Collapsed">
                                <!--  Live preview elements will be added here programmatically  -->
                            </Canvas>
                        </Grid>
                    </ScrollViewer>
                </Border>
                
                <!--  FPS Slider moved to Properties Panel -->
            </Grid>
        </Grid>
        
        <!--  Right Panel - Properties  -->
        <Border
            Grid.Column="2"
            Padding="16"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1,0,0,0">
            <ScrollViewer>
                <StackPanel Spacing="16">
                    <!-- General Settings -->
                    <StackPanel Spacing="8">
                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="General Settings" />
                        <ToggleSwitch 
                            x:Name="PreviewModeToggle"
                            IsOn="{x:Bind ViewModel.IsPreviewing, Mode=TwoWay}"
                            Header="Live Preview" />
                        <Slider 
                            x:Name="FpsSlider"
                            Header="Preview FPS"
                            Minimum="1" 
                            Maximum="60" 
                            Value="{x:Bind ViewModel.PreviewFps, Mode=TwoWay}"
                            StepFrequency="1"
                            SnapsTo="StepValues"
                            TickFrequency="10"
                            TickPlacement="BottomRight"
                            IsThumbToolTipEnabled="True" />
                    </StackPanel>
                    
                    <!-- Selected Source Properties (Single) -->
                    <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.IsSingleSelect, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="Properties" />
                        
                        <TextBox Header="Name" Text="{x:Bind ViewModel.SelectedSourceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Transform Properties  -->
                        <StackPanel Spacing="8">
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Transform" />
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <NumberBox Grid.Column="0" Header="X" Value="{x:Bind ViewModel.SelectedSourceX, Mode=TwoWay}" />
                                <NumberBox Grid.Column="1" Header="Y" Value="{x:Bind ViewModel.SelectedSourceY, Mode=TwoWay}" />
                            </Grid>
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <NumberBox Grid.Column="0" Header="Width" Value="{x:Bind ViewModel.SelectedSourceWidth, Mode=TwoWay}" Minimum="100" SmallChange="10" />
                                <ToggleButton Grid.Column="1" IsChecked="{x:Bind ViewModel.IsAspectRatioLocked, Mode=TwoWay}" VerticalAlignment="Bottom" Margin="0,0,0,4">
                                    <FontIcon Glyph="&#xE72E;" />
                                </ToggleButton>
                                <NumberBox Grid.Column="2" Header="Height" Value="{x:Bind ViewModel.SelectedSourceHeight, Mode=TwoWay}" Minimum="80" SmallChange="10" />
                            </Grid>
                            <StackPanel Spacing="4">
                                <TextBlock Text="Rotation" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,8,0,0"/>
                                <Grid ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="-180" Maximum="180" SmallChange="1" StepFrequency="1" Value="{x:Bind ViewModel.SelectedSourceRotation, Mode=TwoWay}" VerticalAlignment="Center"/>
                                    <NumberBox Grid.Column="1" Value="{x:Bind ViewModel.SelectedSourceRotation, Mode=TwoWay}" Width="80" SmallChange="1" LargeChange="15"/>
                                </Grid>
                            </StackPanel>
                            <Button HorizontalAlignment="Stretch" Content="Center" Command="{x:Bind ViewModel.CenterSourceCommand}" />
                        </StackPanel>

                        <!--  Appearance Properties  -->
                        <StackPanel Spacing="8">
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Appearance" />
                            <Slider Header="Opacity" Minimum="0" Maximum="1" StepFrequency="0.1" Value="{x:Bind ViewModel.SelectedSourceOpacity, Mode=TwoWay}" />
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ToggleSwitch Grid.Column="0" IsOn="{x:Bind ViewModel.SelectedSourceIsMirroredHorizontally, Mode=TwoWay, FallbackValue=false}">
                                    <ToggleSwitch.Header>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE7A7;" />
                                            <TextBlock Text="Flip Horizontal" />
                                        </StackPanel>
                                    </ToggleSwitch.Header>
                                </ToggleSwitch>

                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.SelectedSourceIsMirroredVertically, Mode=TwoWay, FallbackValue=false}">
                                    <ToggleSwitch.Header>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE7A8;" />
                                            <TextBlock Text="Flip Vertical" />
                                        </StackPanel>
                                    </ToggleSwitch.Header>
                                </ToggleSwitch>
                            </Grid>
                        </StackPanel>

                        <!--  Cropping Properties  -->
                        <StackPanel Spacing="8">
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Crop" />
                            <NumberBox Header="Left (%)" Value="{x:Bind ViewModel.SelectedSourceCropLeftPct, Mode=TwoWay}" Minimum="0" Maximum="100" />
                            <NumberBox Header="Top (%)" Value="{x:Bind ViewModel.SelectedSourceCropTopPct, Mode=TwoWay}" Minimum="0" Maximum="100" />
                            <NumberBox Header="Right (%)" Value="{x:Bind ViewModel.SelectedSourceCropRightPct, Mode=TwoWay}" Minimum="0" Maximum="100" />
                            <NumberBox Header="Bottom (%)" Value="{x:Bind ViewModel.SelectedSourceCropBottomPct, Mode=TwoWay}" Minimum="0" Maximum="100" />
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Selected Source Properties (Multiple) -->
                    <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.IsMultiSelect, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="Multiple Selection" />
                        
                        <StackPanel Spacing="8">
                             <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Alignment" />
                             <Grid ColumnSpacing="8" RowSpacing="8">
                                 <Grid.ColumnDefinitions>
                                     <ColumnDefinition Width="*" />
                                     <ColumnDefinition Width="*" />
                                     <ColumnDefinition Width="*" />
                                 </Grid.ColumnDefinitions>
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto" />
                                     <RowDefinition Height="Auto" />
                                 </Grid.RowDefinitions>
                                 
                                 <Button Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AlignLeftCommand}" Content="Left" />
                                 <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AlignCenterCommand}" Content="Center" />
                                 <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AlignRightCommand}" Content="Right" />
                                 
                                 <Button Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AlignTopCommand}" Content="Top" />
                                 <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AlignMiddleCommand}" Content="Middle" />
                                 <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AlignBottomCommand}" Content="Bottom" />
                             </Grid>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Zoom Control -->
                    <StackPanel Spacing="8">
                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Canvas Zoom" />
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider 
                                x:Name="ZoomSlider"
                                Grid.Column="0"
                                Minimum="0.1" 
                                Maximum="4.0" 
                                Value="1.0"
                                StepFrequency="0.1"
                                SnapsTo="StepValues"
                                TickFrequency="0.5"
                                TickPlacement="BottomRight"
                                IsThumbToolTipEnabled="True"
                                ValueChanged="ZoomSlider_ValueChanged" />
                            <TextBlock 
                                x:Name="ZoomPercentageText"
                                Grid.Column="1" 
                                Text="100%"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </Grid>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Fit" Click="ZoomToFit_Click" />
                            <Button Content="100%" Click="Zoom100_Click" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
