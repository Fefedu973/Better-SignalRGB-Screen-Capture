<Page
    x:Class="Better_SignalRGB_Screen_Capture.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Better_SignalRGB_Screen_Capture.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Better_SignalRGB_Screen_Capture.Models"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" ColumnSpacing="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left Panel - Source List  -->
        <Border Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,16"
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Text="Sources" />

                <!--  Control Buttons  -->
                <StackPanel Grid.Row="1" Margin="0,0,0,16" Spacing="8">
                <Button
                    HorizontalAlignment="Stretch"
                    Click="Add_Sources"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" />
                        <TextBlock>Add Source</TextBlock>
                    </StackPanel>
                </Button>
                    
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Button 
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.StartAllCapturesCommand}"
                            Content="Start All" />
                            
                        <Button 
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.StopAllCapturesCommand}"
                            Content="Stop All" />
                    </Grid>
                </StackPanel>

                <!--  Sources List  -->
                <ScrollViewer Grid.Row="2">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Sources}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:SourceItem">
                                <Border
                                    Margin="0,0,0,8"
                                    Padding="12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Source Name/Type  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind DisplayName}"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--  Type Badge  -->
                                        <Border
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Padding="6,2"
                                            Background="{ThemeResource AccentFillColorSecondaryBrush}"
                                            CornerRadius="8">
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="{ThemeResource TextFillColorInverse}"
                                                Text="{x:Bind Type}" />
                                        </Border>

                                        <!--  Details  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            TextTrimming="CharacterEllipsis">
                                            <Run Text="Position:" />
                                            <Run Text="{x:Bind CanvasX, Mode=OneWay}" />
                                            <Run Text="," />
                                            <Run Text="{x:Bind CanvasY, Mode=OneWay}" />
                                            <Run Text=" Size:" />
                                            <Run Text="{x:Bind CanvasWidth, Mode=OneWay}" />
                                            <Run Text="x" />
                                            <Run Text="{x:Bind CanvasHeight, Mode=OneWay}" />
                                        </TextBlock>

                                        <!--  Action Buttons  -->
                                        <StackPanel
                                            Grid.Row="2"
                                            Grid.ColumnSpan="2"
                                            Margin="0,8,0,0"
                                            Orientation="Horizontal"
                                            Spacing="8">
                                            <Button
                                                Padding="8,4"
                                                Click="EditSource_Click"
                                                Content="Edit"
                                                FontSize="12"
                                                Tag="{x:Bind}" />
                                            <Button
                                                Padding="8,4"
                                                Click="DeleteSource_Click"
                                                Content="Delete"
                                                FontSize="12"
                                                Tag="{x:Bind}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!--  Right Panel - Canvas  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Canvas Header  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,16"
                Orientation="Horizontal"
                Spacing="16">
                <TextBlock x:Name="CanvasModeTitle" Style="{ThemeResource TitleTextBlockStyle}" Text="Layout Preview" />
                <ToggleButton 
                    x:Name="PreviewModeToggle"
                    Click="PreviewModeToggle_Click"
                    Content="Switch to Live Preview"
                    FontSize="12" />
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock FontSize="12" FontWeight="SemiBold" Text="MJPEG Stream:" />
                    <TextBlock 
                        FontSize="11" 
                        FontFamily="Consolas"
                        Foreground="{ThemeResource SystemAccentColor}"
                        Text="{x:Bind ViewModel.StreamingUrl, Mode=OneWay, FallbackValue='Starting...'}" />
                </StackPanel>
            </StackPanel>

            <!--  Canvas Container  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <Border
                    Grid.Row="0"
                    Background="{ThemeResource LayerFillColorAltBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <Viewbox
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Stretch="Uniform">
                        <Grid>
                            <!-- Layout Canvas -->
                        <Canvas
                            x:Name="SourceCanvas"
                            Width="800"
                            Height="600"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                            <!--  Sources will be added here programmatically  -->
                        </Canvas>
                            
                            <!-- Live Preview Canvas -->
                            <Canvas
                                x:Name="PreviewCanvas"
                                Width="800"
                                Height="600"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Visibility="Collapsed">
                                <!--  Live preview elements will be added here programmatically  -->
                            </Canvas>
                        </Grid>
                    </Viewbox>
                </Border>
                
                <!--  FPS Slider  -->
                <StackPanel Grid.Row="1" Margin="0,16,0,0" Spacing="8">
                    <TextBlock 
                        Text="Preview FPS" 
                        FontWeight="SemiBold" 
                        FontSize="14" />
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Slider 
                            x:Name="FpsSlider"
                            Grid.Column="0"
                            Minimum="1" 
                            Maximum="60" 
                            Value="{x:Bind ViewModel.PreviewFps, Mode=TwoWay}"
                            StepFrequency="1"
                            SnapsTo="StepValues"
                            TickFrequency="10"
                            TickPlacement="BottomRight"
                            Header=""
                            IsThumbToolTipEnabled="True" />
                        
                        <TextBlock 
                            Grid.Column="1"
                            Text="{x:Bind ViewModel.PreviewFps, Mode=OneWay}"
                            FontSize="14"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"
                            MinWidth="30"
                            TextAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
