<UserControl
    x:Class="Better_SignalRGB_Screen_Capture.Views.DraggableSourceItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Better_SignalRGB_Screen_Capture.Views"
    xmlns:models="using:Better_SignalRGB_Screen_Capture.Models">

    <Border x:Name="SourceBorder"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="2"
            CornerRadius="4"
            MinWidth="80"
            MinHeight="60">
        
        <Grid>
            <!-- Main content -->
            <StackPanel Margin="8" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center">
                <TextBlock Text="{x:Bind Source.DisplayName, Mode=OneWay}"
                          FontSize="11"
                          FontWeight="SemiBold"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          MaxLines="2"/>
                
                <TextBlock Text="{x:Bind Source.DisplaySubtitle, Mode=OneWay}"
                          FontSize="9"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          TextAlignment="Center"
                          Margin="0,1,0,0"/>
                
                <TextBlock Text="{x:Bind GetTypeDisplayString(Source.Type), Mode=OneWay}"
                          FontSize="8"
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                          TextAlignment="Center"
                          Margin="0,1,0,0"/>
            </StackPanel>

            <!-- Resize handles -->
            <!-- Top-left handle -->
            <Rectangle x:Name="TopLeftHandle"
                      Width="8" Height="8"
                      Fill="{ThemeResource AccentFillColorDefaultBrush}"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Margin="-4,-4,0,0"
                      Opacity="0"/>

            <!-- Top-right handle -->
            <Rectangle x:Name="TopRightHandle"
                      Width="8" Height="8"
                      Fill="{ThemeResource AccentFillColorDefaultBrush}"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="0,-4,-4,0"
                      Opacity="0"/>

            <!-- Bottom-left handle -->
            <Rectangle x:Name="BottomLeftHandle"
                      Width="8" Height="8"
                      Fill="{ThemeResource AccentFillColorDefaultBrush}"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      Margin="-4,0,0,-4"
                      Opacity="0"/>

            <!-- Bottom-right handle -->
            <Rectangle x:Name="BottomRightHandle"
                      Width="8" Height="8"
                      Fill="{ThemeResource AccentFillColorDefaultBrush}"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom"
                      Margin="0,0,-4,-4"
                      Opacity="0"/>
        </Grid>
    </Border>
</UserControl> 